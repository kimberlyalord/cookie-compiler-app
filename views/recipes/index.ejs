<%- include('../partials/header') %>

<section id="all-recipes">
  <% recipes.forEach(function(r) { %>
  <% if (r.image) { %>
  <img src="<%= r.image %>" alt="cookie picture"><br>
  <% } %>
  <% if (r.attributes.length) { %>
  <div class="header">Attributes:</div>
  <% r.attributes.forEach(function(a) { %>
    <div><%= a.attributeName %></div>
  <% }); %>
  <% } %>
  <div class="header">Recipe Name:</div>
  <div><%= r.recipeName %></div>
  <div class="header">Ingredients:</div>
  <div><%= r.ingredients %></div>
  <br><br>
  <a href="/recipes/<%= r._id %>">See Full Recipe</a>
  <% }); %>
</section>

<%- include('../partials/footer') %>